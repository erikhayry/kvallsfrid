{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es2019",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "." // This must be specified if "paths" is.
  },
  "exclude": ["lib/**/*"],
  "paths": {
    "*": [
      "node_modules/*",
      "types/*"
    ]
  }
}
